<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="vlad" context="main">
        <createTable tableName="users">
            <column name="user_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="login" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="password" type="varchar(50)">
                <constraints nullable="false"/>
            </column>

            <column name="firstname" type="varchar(50)">
                <constraints nullable="false"/>
            </column>

            <column name="lastname" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>



    <changeSet id="2" author="vlad" context="main">
        <createTable tableName="suggestions">
            <column name="suggestion_id" type="INT(11)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="title" type="VARCHAR(600)">
                <constraints nullable="false"/>
            </column>

            <column name="upvotes" type="INT(11)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>


    <changeSet id="3" author="vlad" context="main">
        <createTable tableName="comments">
            <column name="comment_id" type="INT(11)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="text" type="VARCHAR(3000)">
                <constraints nullable="false"/>
            </column>

            <column name="author" type="varchar(30)">
            </column>

            <column name="date" type="DATETIME">
            </column>

            <column name="suggestion_id" type="INT(11)">
                <constraints references="suggestions(suggestion_id)"
                             foreignKeyName="SuggestionHasComments"
                             deleteCascade="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>


</databaseChangeLog>